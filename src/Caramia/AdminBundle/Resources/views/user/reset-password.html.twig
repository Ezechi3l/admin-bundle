{% extends 'CaramiaAdminBundle::standard_layout.html.twig' %}

{% block body_attributes %}class="sonata-bc skin-black fixed admin-login"{% endblock %}

{% block sonata_header %}{% endblock %}

{% block sonata_wrapper %}
    {% include 'CaramiaAdminBundle:user:flash.html.twig' %}

    {% block main %}
        <div class="well login-form">
            <fieldset>
                <legend>
                    <i class="fa fa-lock"></i> {{ 'reset_password.title'|trans({}, 'Admin')}}
                </legend>
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.password.password) }}
                    {{ form_widget(form.password.password) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.password.confirm) }}
                    {{ form_widget(form.password.confirm) }}
                </div>

                {{ form_rest(form) }}
                {{ form_end(form) }}
            </fieldset>
        </div>
    {% endblock %}
{% endblock %}
