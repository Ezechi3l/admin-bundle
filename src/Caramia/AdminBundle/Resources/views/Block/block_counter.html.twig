{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box">
        <div class="box-body">
            <div class="caramiaCounter-container">
                {% if settings.entity %}
                    <div class="caramiaCounter-number">
                        {{ nb }}
                    </div>
                    <div class="caramiaCounter-legend">
                        {{ settings.title }}
                    </div>
                {% else %}
                    <div class="alert alert-warning">
                        Missing setting "entity".
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
